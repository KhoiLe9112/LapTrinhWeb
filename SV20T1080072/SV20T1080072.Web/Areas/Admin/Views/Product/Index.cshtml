@model IEnumerable<SV20T1080072.DomainModels.Product>
@{
    ViewBag.Title = "Quản lý Mặt hàng";
}

<div class="container-fluid box box-primary">
    <div class="box-header">
    </div>
    <div class="box-body">
        <form action="#" method="get">
            <div class="row">
                <div class="col-sm-3">
                    <select class="form-control" name="category">
                        <option>-- Loại hàng --</option>
                        <option>Mỹ phẩm</option>
                        <option>Thực phẩm</option>
                    </select>
                </div>
                <div class="col-sm-3">
                    <select class="form-control" name="category">
                        <option>-- Nhà cung cấp --</option>
                        <option>Công ty TNHH Thành Công</option>
                        <option>Vina Foods</option>
                    </select>
                </div>
                <div class="col-sm-6 input-group">
                    <input type="text" name="searchValue"
                           class="form-control"
                           placeholder="Nhập tên mặt hàng cần tìm">
                    <span class="input-group-btn">
                        <button type="submit" name="searchValue" id="search-btn" class="btn btn-flat btn-info">
                            <i class="fa fa-search"></i>
                        </button>
                        <a href="~/Admin/Product/Create"
                           class="btn btn-flat btn-primary"
                           style="margin-left:5px;">
                            <i class="fa fa-plus"></i> Bổ sung
                        </a>
                    </span>
                </div>
            </div>
        </form>

        <p style="margin:10px 0 10px 0">
            Có <strong>@ViewBag.RowCount</strong> loại hàng. Hiện ở trang <strong>@ViewBag.Page</strong> trên tổng số <strong>@Math.Ceiling((double)ViewBag.RowCount/10)</strong> trang
        </p>

        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th style="width:80px">Ảnh</th>
                        <th>Tên mặt hàng</th>
                        <th>Đơn vị tính</th>
                        <th>Giá</th>
                        <th style="width:75px">&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="~/images/products/samsung.jpg" style="width:80px" />
                            </td>
                            <td style="vertical-align:middle">@item.ProductName</td>
                            <td style="vertical-align:middle">@item.ProductDescription</td>
                            <td style="vertical-align:middle">@string.Format("{0:0,0}",item.Price)</td>
                            <td class="text-right" style="vertical-align:middle">
                                <a href="~/Admin/Product/Edit/123" class="btn btn-xs btn-flat btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Admin/Product/Delete/123" class="btn btn-xs btn-flat btn-danger">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="box-footer text-center">
        <ul class="pagination">
            @if (ViewBag.Page != 1)
            {
                int pageNumber = ViewBag.Page - 1;
                <li class="paginate_button" id="example2_previous">
                    <a href="~/Admin/Product/Index/?page=@pageNumber">Previous</a>
                </li>
            }
            @{
                int _pageNext = ViewBag.TotalPage;
                int _pagePrev = 1;
                if (ViewBag.TotalPage >= 5)
                {
                    _pageNext = ViewBag.Page + 2;
                    _pagePrev = ViewBag.Page - 2;
                    if (_pageNext > ViewBag.TotalPage)
                    {
                        _pagePrev -= _pageNext - ViewBag.TotalPage;
                        _pageNext = ViewBag.TotalPage;
                    }
                    else if (_pagePrev <= 0)
                    {
                        _pageNext -= _pagePrev - 1;
                        _pagePrev = 1;
                    }
                }
                for (int i = _pagePrev; i <= _pageNext; i++)
                {
                    if (ViewBag.Page == i)
                    {
                        <li class="paginate_button active">
                            <a href="~/Admin/Product/Index/?page=@i">@i</a>
                        </li>
                    }
                    else
                    {
                        <li class="paginate_button">
                            <a href="~/Admin/Product/Index/?page=@i">@i</a>
                        </li>
                    }
                }
            }
            @if (ViewBag.Page != ViewBag.TotalPage)
            {
                int pageNumber = ViewBag.Page + 1;
                <li class="paginate_button next" id="example2_next">
                    <a href="~/Admin/Product/Index/?page=@pageNumber">Next</a>
                </li>
            }
        </ul>
    </div>
</div>