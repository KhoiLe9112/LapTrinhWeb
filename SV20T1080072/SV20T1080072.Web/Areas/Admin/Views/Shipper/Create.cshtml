@model SV20T1080072.DomainModels.Shipper
@{

}

<div class="box box-primary">
	<div class="box-body">
		@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
		{
			<div class="alert alert-warning">
				<p>@ViewBag.ErrorMessage</p>
			</div>
		}
		<form action="~/Admin/Shipper/Save" method="post">
			@Html.HiddenFor(m => m.ShipperID)
			<div class="form-group">
				<label> Tên đơn vị giao hàng:</label>
				@Html.TextBoxFor(m => m.ShipperName, new { @class="form-control", @autofocus="autofocus"})
				@Html.ValidationMessageFor(m => m.ShipperName, "", new {@style="color:#f00"})
			</div>

			<div class="form-group">
				<label> Số điện thoại:</label>
				@Html.TextBoxFor(m => m.Phone, new { @class="form-control"})
				@Html.ValidationMessageFor(m => m.Phone, "", new {@style="color:#f00"})
			</div>

			<button type="submit" class="btn btn-primary">
				<i class="fa fa-floppy-o"></i>
				Lưu dữ liệu
			</button>
			<a href="~/Admin/Shipper" class="btn btn-default">Quay lại</a>
		</form>
	</div>
</div>



