@model SV20T1080072.DomainModels.Category
@{

}

<div class="box box-primary">
	<div class="box-body">
		@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
		{
			<div class="alert alert-warning">
				<p>@ViewBag.ErrorMessage</p>
			</div>
		}
		<form action="~/Admin/Category/Save" method="post">
			@Html.HiddenFor(m => m.CategoryId)
			<div class="form-group">
				<label> Tên loại hàng:</label>
				@Html.TextBoxFor(m => m.CategoryName, new { @class="form-control", @autofocus="autofocus"})
				@Html.ValidationMessageFor(m => m.CategoryName, "", new {@style="color:#f00"})
			</div>

			<div class="form-group">
				<label> Mô tả:</label>
				@Html.TextBoxFor(m => m.Description, new { @class="form-control"})
				@Html.ValidationMessageFor(m => m.Description, "", new {@style="color:#f00"})
			</div>

			<button type="submit" class="btn btn-primary">
				<i class="fa fa-floppy-o"></i>
				Lưu dữ liệu
			</button>
			<a href="~/Admin/Category" class="btn btn-default">Quay lại</a>
		</form>
	</div>
</div>



