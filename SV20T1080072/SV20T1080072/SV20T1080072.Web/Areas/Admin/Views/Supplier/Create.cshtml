@using SV20T1080072.Web;
@model SV20T1080072.DomainModels.Supplier
@{

}

<div class="box box-primary">
	<div class="box-body">
		@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
		{
			<div class="alert alert-warning">
				<p>@ViewBag.ErrorMessage</p>
			</div>
		}
		<form action="~/Admin/Supplier/Save" method="post">
			@Html.HiddenFor(m => m.SupplierID)
			<div class="form-group">
				<label> Tên nhà cung cấp:</label>
				@Html.TextBoxFor(m => m.SupplierName, new { @class="form-control", @autofocus="autofocus"})
				@Html.ValidationMessageFor(m => m.SupplierName, "", new {@style="color:#f00"})
			</div>

			<div class="form-group">
				<label> Tên giao dịch:</label>
				@Html.TextBoxFor(m => m.ContactName, new { @class="form-control"})
				@Html.ValidationMessageFor(m => m.ContactName, "", new {@style="color:#f00"})
			</div>

			<div class="form-group">
				<label> Địa chỉ:</label>
				@Html.TextBoxFor(m => m.Address, new { @class="form-control"})
				@Html.ValidationMessageFor(m => m.Address, "", new {@style="color:#f00"})
			</div>

			<div class="form-group">
				<label> Tỉnh thành:</label>
				@Html.DropDownListFor(m => m.Province, SelectListHelper.Provinces(), new { @class="form-control", @name = "provinces"})
				@Html.ValidationMessageFor(m => m.Province, "", new {@style="color:#f00"})
			</div>

			<div class="form-group">
				<label> Điện thoại:</label>
				@Html.TextBoxFor(m => m.Phone, new { @class="form-control"})
				@Html.ValidationMessageFor(m => m.Phone, "", new {@style="color:#f00"})
			</div>

			<div class="form-group">
				<label> Email:</label>
				@Html.TextBoxFor(m => m.Email, new { @class="form-control"})
				@Html.ValidationMessageFor(m => m.Email, "", new {@style="color:#f00"})
			</div>

				@* <div class="checkbox">
			<label><input type="checkbox"> Remember me</label>
			</div> *@

			<button type="submit" class="btn btn-primary">
				<i class="fa fa-floppy-o"></i>
				Lưu dữ liệu
			</button>
			<a href="~/Admin/Supplier" class="btn btn-default">Quay lại</a>
		</form>
	</div>
</div>

				