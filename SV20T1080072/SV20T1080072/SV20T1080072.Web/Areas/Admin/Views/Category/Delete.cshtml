@model SV20T1080072.DomainModels.Category
@{
	ViewBag.Title = "Xóa loại hàng";
}

<div class="box box-danger">
	<div class="box-body">
		<form action="~/Admin/Category/Delete/@Model.CategoryId" method="post">
			<div class="form-group">
				<label> Tên đơn vị giao hàng:</label>
				<p class="form-control-static" style="border-bottom:1px dotted  black">@Model.CategoryName</p>
			</div>

			<div class="form-group">
				<label> Số điện thoại:</label>
				<p class="form-control-static" style="border-bottom:1px dotted  black">@Model.Description</p>
			</div>

			<button type="submit" class="btn btn-danger">
				<i class="fa fa-remove"></i>
				Xóa dữ liệu
			</button>
			<a href="~/Admin/Category" class="btn btn-default">Quay lại</a>
		</form>
	</div>
</div>

